{
  "name": "subtly",
  "version": "0.1.0",
  "private": false,
  "description": "Desktop app for GPU-accelerated Whisper subtitle generation.",
  "homepage": "https://subtly.aer.app",
  "author": "Prakhar Shukla <prafiles@gmail.com>",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "pack": "electron-builder",
    "pack:all": "yarn build:runtime && yarn build && electron-builder -mwl",
    "assets:download": "node scripts/download-assets.js",
    "assets:sync": "node scripts/sync-assets.js",
    "aio:setup": "yarn assets:download && yarn assets:sync",
    "build:runtime": "cargo build --release --manifest-path runtime/gpu-runtime/Cargo.toml",
    "test": "vitest run --coverage",
    "test:all": "yarn test && yarn test:rust && yarn test:e2e",
    "test:e2e": "node scripts/test-e2e.js",
    "test:rust": "LLVM_COV=$(xcrun --find llvm-cov) LLVM_PROFDATA=$(xcrun --find llvm-profdata) cargo llvm-cov --manifest-path runtime/gpu-runtime/Cargo.toml --fail-under-lines 100 --fail-under-functions 100 --fail-under-regions 99.7 --ignore-filename-regex 'rustc'",
    "test:watch": "vitest",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "@sentry/electron": "^4.10.0",
    "@tanstack/react-query": "^5.45.0",
    "clsx": "^2.1.1",
    "electron-updater": "^6.1.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.3.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/coverage-v8": "^2.0.5",
    "autoprefixer": "^10.4.19",
    "electron": "30.0.0",
    "electron-builder": "^24.13.3",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "vite": "^5.3.3",
    "vitest": "^2.0.5"
  },
  "build": {
    "appId": "app.aer.subtly",
    "productName": "Subtly",
    "files": [
      "dist/main.js",
      "dist/preload.js",
      "dist/shared/**",
      "dist/renderer/**",
      "node_modules/**",
      "package.json"
    ],
    "asar": true,
    "icon": "resources/icon.png",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "extraResources": [
      {
        "from": "runtime/gpu-runtime/target/release",
        "to": "runtime",
        "filter": [
          "gpu-runtime",
          "gpu-runtime.exe"
        ]
      },
      {
        "from": "resources/runtime-assets",
        "to": "runtime/assets"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist",
      "notarize": true
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "maintainer": "Prakhar Shukla <prafiles@gmail.com>",
      "category": "AudioVideo",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}